<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/white"
    tools:context=".Auth">


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="56dp"

        android:paddingEnd="20dp"

        android:text="Пропустить"
        android:textColor="#1A6FEE"
        android:textSize="15sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"

        android:text="Создайте пароль"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"

        android:gravity="center"

        android:text="Для защиты ваших персональных данных"
        android:textColor="#939396"
        android:textSize="15sp"/>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/password_state_1"

            android:layout_width="16dp"
            android:layout_height="16dp"

            android:src="@drawable/state_disable_bg"/>

        <ImageView

            android:id="@+id/password_state_2"

            android:layout_width="16dp"
            android:layout_height="16dp"

            android:layout_marginStart="12dp"

            android:src="@drawable/state_disable_bg"/>

        <ImageView

            android:id="@+id/password_state_3"

            android:layout_width="16dp"
            android:layout_height="16dp"

            android:layout_marginStart="12dp"

            android:src="@drawable/button_disable_bg"/>

        <ImageView

            android:id="@+id/password_state_4"

            android:layout_width="16dp"
            android:layout_height="16dp"

            android:layout_marginStart="12dp"

            android:src="@drawable/button_disable_bg"/>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"

        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/password_button_1"

            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="43dp"

            android:text="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"

            android:background="@drawable/button_password_disable_bg"
             />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/password_button_2"


            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_marginStart="43dp"
            android:background="@drawable/button_password_disable_bg"
            android:hint="f"
            android:text="2"

            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/password_button_3"


            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_marginStart="43dp"
            android:background="@drawable/button_password_disable_bg"
            android:hint="free"
            android:text="3"

            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"

        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/password_button_4"


            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_marginStart="43dp"
            android:background="@drawable/button_password_disable_bg"
            android:hint="thwo"
            android:text="4"

            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/password_button_5"


            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_marginStart="43dp"
            android:background="@drawable/button_password_disable_bg"
            android:hint="five"
            android:text="5"

            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/password_button_6"


            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_marginStart="43dp"
            android:background="@drawable/button_password_disable_bg"
            android:hint="six"
            android:text="6"

            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"

        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/password_button_7"


            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_marginStart="43dp"
            android:background="@drawable/button_password_disable_bg"
            android:hint="seven"
            android:text="7"

            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/password_button_8"


            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_marginStart="43dp"
            android:background="@drawable/button_password_disable_bg"
            android:hint="eat"
            android:text="8"

            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/password_button_9"


            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_marginStart="43dp"
            android:background="@drawable/button_password_disable_bg"
            android:hint="nine"
            android:text="9"

            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"

        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/password_button_0"


            android:layout_width="80dp"

            android:layout_height="80dp"

            android:layout_marginStart="167dp"
            android:background="@drawable/button_password_disable_bg"
            android:hint="ten"
            android:text="0"

            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/password_clear"

            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginStart="60dp"

            android:background="@drawable/button_remove"
            android:hint="." />

    </LinearLayout>

</LinearLayout>